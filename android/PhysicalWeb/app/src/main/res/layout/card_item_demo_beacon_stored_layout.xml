<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_stored"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:id="@+id/beacon_stored_img"
                android:src="@drawable/ic_star_border_wine_24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/beacon_title"
                android:layout_toRightOf="@+id/beacon_stored_img"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_url"
                android:text="URL"
                android:textSize="13dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/beacon_stored_img"
                android:layout_below="@+id/beacon_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beacon_ts"
                android:text="Timestamp"
                android:textSize="13dp"
                android:layout_toRightOf="@+id/beacon_stored_img"
                android:layout_below="@+id/beacon_url"
                android:gravity="end"
                android:textColor="@color/www18_accent"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
